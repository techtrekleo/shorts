{
  "name": "sonicpulse-shorts",
  "version": "1.0.0",
  "description": "Shorts 製作中心 - 影片循環與音樂剪輯工具",
  "main": "railway-start.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "railway": "node railway-start.js",
    "railway:build": "npm run build && npm run railway",
    "docker:build": "docker build -t shorts-app .",
    "docker:build:optimized": "docker build -f Dockerfile.optimized -t shorts-app-optimized .",
    "docker:build:railway": "docker build -f Dockerfile.railway -t shorts-app-railway .",
    "docker:run": "docker run -p 3000:3000 shorts-app",
    "docker:compose": "docker-compose up --build",
    "docker:compose:railway": "docker-compose -f docker-compose.railway.yml up --build",
    "railway:deploy": "npm run build && railway up"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-player": "^2.12.0",
    "styled-components": "^6.0.0",
    "@types/styled-components": "^5.1.26",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/express": "^4.17.17"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
